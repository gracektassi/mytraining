<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike',self)]" />
                <field name="user_id"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="tag_ids"  options="{'color_field': 'color'}"/>
                <field name="facades"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="buyer_id"/>
                <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name='postcode' context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>

                <header>
                    <button name="action_sold" type="object" string="Sold1" />
                    <button name="action_offer_received" type="object" string="offer received" />  
                    <button name="action_sold" type="object" string="Sold2" class="oe_highlight" invisible="state in ('sold','cancelled')"/>
                    <button name="action_cancel" type="object" string="Cancel"/>                    
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                       <field name="tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>   
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" >
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation" widget="radio"/>
                                    <field name="total_area"/>
                          
                                </group>
                            </group>
                        </page>
                      
                        <page string="Offers" column-invisible="state=='sold'">
                            <field name="offer_ids"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="user_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree >
                <field name="user_id"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="buyer_id"/>
                 <field name="state"/>
                <field name="date_availability" optional="hide"/>
            
            </tree>
        </field>
    </record>

     <record id="test_record" model="ir.actions.act_window">
        <field name="name">Test Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': 1}</field>
     </record>

   

</odoo>
